<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_stage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
<LinearLayout
    tools:context="com.example.rouge.anem.Stage.NewStageActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:id="@+id/intitule"
            android:textSize="30sp"
            android:textAlignment="center" />

        <TextView
            android:text="Entreprise d'accueil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/labelEntreprise"
            android:textSize="18sp" />
        <EditText
            android:text="Comp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textEntreprise"
            android:textSize="14sp" />
        <TextView
            android:text="Etat du stage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/labelEtat"
            android:textSize="18sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation='horizontal'
            android:id="@+id/choixEtat">

        </RadioGroup>

        <TextView
            android:text="Description de la mission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/labelDesc"
            android:textSize="18sp" />
        <EditText
            android:text="Description de la mission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textDesc"
            android:textSize="14sp" />
        <TextView
            android:text="Liste des compétences mises en oeuvre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/labelComp"
            android:textSize="18sp" />
        <TextView
            android:text="Aucune compétences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textComp"
            android:textSize="14sp" />
        <SearchView android:id="@+id/search" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" android:iconifiedByDefault="false" >
        </SearchView>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/competences"/>

</LinearLayout>
</ScrollView>