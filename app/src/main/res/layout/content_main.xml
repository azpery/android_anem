<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/app_bar_main"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical" android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:weightSum="100">

        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="50">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/shop"
                    android:id="@+id/imageButton"
                    android:layout_weight="1"
                    android:background="@color/cast_expanded_controller_ad_container_white_stripe_color"
                    android:contentDescription="Boutique"
                    android:text="This text is below the image"
                    android:scaleType="fitCenter" />

                <TextView
                    android:text="Boutique"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_assignment_ind_black_24dp"
                    android:id="@+id/btnUtilisateur"
                    android:layout_weight="1"
                    android:background="@color/cast_expanded_controller_ad_container_white_stripe_color"
                    android:contentDescription="Boutique"
                    android:text="This text is below the image"
                    android:scaleType="fitCenter" />

                <TextView
                    android:text="Contacts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="50">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_domain_black_24dp"
                    android:id="@+id/btnEntreprise"
                    android:layout_weight="1"
                    android:background="@color/cast_expanded_controller_ad_container_white_stripe_color"
                    android:contentDescription="Boutique"
                    android:text="This text is below the image"
                    android:scaleType="fitCenter" />

                <TextView
                    android:text="Entreprise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_assignment_black_24dp"
                    android:id="@+id/btnStage"
                    android:layout_weight="1"
                    android:background="@color/cast_expanded_controller_ad_container_white_stripe_color"
                    android:contentDescription="Boutique"
                    android:text="This text is below the image"
                    android:scaleType="fitCenter" />

                <TextView
                    android:text="Contacts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
</LinearLayout>